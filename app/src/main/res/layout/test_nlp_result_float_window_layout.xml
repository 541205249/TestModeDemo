<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:background="#aa000000" >

    <include
        android:id="@+id/float_control_bar_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/float_bar_layout"/>

    <View
        android:id="@+id/separate_view_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/float_control_bar_rl"
        android:background="@color/white" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separate_view_1"
        android:text="开始"/>

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btn_start"
        android:layout_alignTop="@id/btn_start"
        android:text="清零"/>

    <TextView
        android:id="@+id/float_log_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_question"
        android:background="@color/heavy_transparent_black"
        android:padding="8dp"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_start"
        android:textColor="@color/white"
        android:text="请选择问题原因"/>

    <ListView
        android:id="@+id/lv_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_start"
        android:layout_toEndOf="@id/tv_tips"
        android:background="#80ffffff"/>
</RelativeLayout>